@{
    ViewData["Title"] = "Analytics";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 mb-0">Analytics</h1>
            <p class="text-muted">Detailed analysis of your financial data</p>
        </div>
    </div>

    <!-- Analytics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Monthly Analysis</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Available</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Category Analysis</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Available</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Merchant Analysis</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Available</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-store fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Data Export</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">Available</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-download fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Coming Soon Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-body text-center py-5">
                    <i class="fas fa-chart-line fa-4x text-muted mb-4"></i>
                    <h4 class="text-gray-600 mb-3">Advanced Analytics Coming Soon</h4>
                    <p class="text-muted mb-4">
                        We're working on powerful analytics features including:
                    </p>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-calendar-alt fa-2x text-primary mb-2"></i>
                                <h6>Monthly Reports</h6>
                                <small class="text-muted">Detailed monthly spending analysis</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-chart-pie fa-2x text-success mb-2"></i>
                                <h6>Category Breakdown</h6>
                                <small class="text-muted">Spending by category visualization</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-building fa-2x text-info mb-2"></i>
                                <h6>Merchant Analysis</h6>
                                <small class="text-muted">Top merchants and spending patterns</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <i class="fas fa-file-export fa-2x text-warning mb-2"></i>
                                <h6>Custom Reports</h6>
                                <small class="text-muted">Export data in various formats</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 